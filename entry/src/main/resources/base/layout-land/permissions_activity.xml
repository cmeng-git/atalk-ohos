<?xml version="1.0" encoding="utf-8"?>

<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:top_margin="$float:screen_padding"
    ohos:left_margin="$float:screen_padding_land"
    ohos:end_margin="$float:screen_padding_land"
    ohos:bottom_margin="$float:screen_padding"
    ohos:background_element="$color:color_primary"
    ohos:orientation="vertical">

    <DependentLayout
        ohos:width="match_content"
        ohos:height="match_parent">

        <Text
            ohos:id="$+id:permission_hint"
            ohos:text_size="$float:medium_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:bottom_margin="10dp"
            ohos:background_element="$graphic:alpha_blue_01"
            ohos:padding="$float:label_padding"
            ohos:text="$string:permission_hint" />

        <Button
            ohos:id="$+id:camera_permission_button"
            style="$style:PermissionButton"
            ohos:below="$id:permission_hint"
            ohos:start_margin="$float:screen_padding"
            ohos:text="$string:permission_camera" />

        <Text
            ohos:id="$+id:camera_permission_feedback"
            style="$style:PermissionFeedback"
            ohos:below="$id:permission_hint"
            ohos:end_of="$id:camera_permission_button"
            ohos:text="$string:permission_unknown" />

        <Button
            ohos:id="$+id:contacts_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:camera_permission_button"
            ohos:start_margin="$float:screen_padding"
            ohos:text="$string:permission_contacts" />

        <Text
            ohos:id="$+id:contacts_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:camera_permission_feedback"
            ohos:centerHorizontal="true"
            ohos:end_of="$id:contacts_permission_button"
            ohos:text="$string:permission_unknown" />

        <Button
            ohos:id="$+id:location_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:contacts_permission_button"
            ohos:start_margin="$float:screen_padding"
            ohos:text="$string:permission_location" />

        <Text
            ohos:id="$+id:location_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:contacts_permission_feedback"
            ohos:end_of="$id:location_permission_button"
            ohos:text="$string:permission_unknown" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0dp"
            ohos:height="0dp"
            ohos:centerHorizontal="true"
            ohos:visibility="visible" />

        <Button
            ohos:id="$+id:audio_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:permission_hint"
            ohos:end_of="$id:centerShim"
            ohos:text="$string:permission_audio" />

        <Text
            ohos:id="$+id:audio_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:permission_hint"
            ohos:end_of="$id:audio_permission_button"
            ohos:text="$string:permission_unknown" />

        <Button
            ohos:id="$+id:phone_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:audio_permission_button"
            ohos:end_of="$id:centerShim"
            ohos:text="$string:permission_phone" />

        <Text
            ohos:id="$+id:phone_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:audio_permission_feedback"
            ohos:end_of="$id:phone_permission_button"
            ohos:text="$string:permission_unknown" />

        <Button
            ohos:id="$+id:storage_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:phone_permission_button"
            ohos:end_of="$id:centerShim"
            ohos:text="$string:permission_storage" />

        <Text
            ohos:id="$+id:storage_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:phone_permission_feedback"
            ohos:end_of="$id:storage_permission_button"
            ohos:text="$string:permission_unknown" />

        <Button
            ohos:id="$+id:notifications_permission_button"
            style="@style/PermissionButton"
            ohos:below="$id:storage_permission_button"
            ohos:end_of="$id:centerShim"
            ohos:text="$string:permission_notifications" />

        <Text
            ohos:id="$+id:notifications_permission_feedback"
            style="@style/PermissionFeedback"
            ohos:below="$id:storage_permission_feedback"
            ohos:end_of="$id:notifications_permission_button"
            ohos:text="$string:permission_unknown" />
    </DependentLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        ohos:id="$+id:button_Container"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:align_parent_bottom="true">

        <Button
            ohos:id="$+id:all_permissions_button"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:permission_request_all" />

        <Button
            ohos:id="$+id:app_info_permissions_button"
            ohos:background_element="$graphic:btn_state_action"
            ohos:left_margin="3dp"
            ohos:end_margin="3dp"
            ohos:text="$string:permission_app_info" />

        <Button
            ohos:id="$+id:button_done"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:done" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</DependentLayout>
