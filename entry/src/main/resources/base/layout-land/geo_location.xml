<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:orientation="horizontal"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0dp"
        ohos:orientation="vertical"
        ohos:padding="$float:screen_padding"
        ohos:weight="1">

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:gravity="center"
            ohos:margin="5dp"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:latitude"
                ohos:height="match_content"
                ohos:width="80dp"
                ohos:text="$string:latitude"
                ohos:text_size="$float:medium_font"/>

            <Text
                ohos:id="$+id:latitude_textview"
                ohos:background_element="$graphic:bg_text"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:gravity="center"
            ohos:margin="5dp"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:longitude"
                ohos:height="match_content"
                ohos:width="80sp"
                ohos:text="$string:longitude"
                ohos:text_size="$float:medium_font"/>

            <Text
                ohos:id="$+id:longitude_textview"
                ohos:background_element="$graphic:bg_text"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:gravity="center"
            ohos:margin="5dp"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:altitude"
                ohos:height="match_content"
                ohos:width="85dp"
                ohos:text="$string:altitude"
                ohos:text_size="$float:medium_font"/>

            <Text
                ohos:id="$+id:altitude_textview"
                ohos:background_element="$graphic:bg_text"/>
        </DirectionalLayout>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:gravity="center"
            ohos:margin="5dp"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:locationAddress"
                ohos:height="match_content"
                ohos:width="80sp"
                ohos:text="$string:location"
                ohos:text_size="$float:medium_font"/>

            <Text
                ohos:id="$+id:locationAddress_textview"
                ohos:background_element="$graphic:bg_text"/>
        </DirectionalLayout>

        <Checkbox
            ohos:id="$+id:gps_share"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:end_margin="10dp"
            ohos:text="$string:geo_share"/>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="0dp"
        ohos:orientation="vertical"
        ohos:padding="$float:screen_padding"
        ohos:weight="1">

        <Button
            ohos:id="$+id:btn_single_fix"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:single_location_fix"
            ohos:textAllCaps="false"/>

        <Button
            ohos:id="$+id:btn_follow_me"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:follow_me_start"
            ohos:textAllCaps="false"/>

        <Slider
            ohos:id="$+id:seekDistanceInterval"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:progress_element="$color:red100"
            ohos:progress_width="6vp"
            ohos:top_margin="10vp"/>

        <Slider
            ohos:id="$+id:seekTimeInterval"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:progress_element="$color:blue100"
            ohos:progress_width="6vp"
            ohos:top_margin="10vp"/>
    </DirectionalLayout>

</DirectionalLayout>



