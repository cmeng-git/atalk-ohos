<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:clickable="true"
    ohos:focusable="focus_adaptable"
    ohos:padding="$float:screen_padding"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:config_title"
        ohos:text_size="$float:medium_font"
        ohos:background_element="$graphic:alpha_blue_01"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:padding="5vp"
        ohos:bottom_margin="$float:label_padding" />

    <ListContainer
        ohos:id="$+id:formListContainer"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1"
        ohos:top_margin="8vp" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="$float:between_padding"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:rcb_Cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:rcb_Submit"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:text="$string:submit" />
    </DirectionalLayout>

</DirectionalLayout>