<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$color:background_light"
    ohos:clickable="true"
    ohos:focusable="focus_adaptable"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:call_history"
        ohos:text_size="$float:medium_font"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:background_element="$color:background_dark"
        ohos:padding="5vp"
        ohos:text="$string:call_history_name"
        ohos:text_color="$color:textColorWhite" />

    <DirectionalLayout
        ohos:id="$+id:call_history_dateTime"
        ohos:background_element="?attr/colorBackground"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:padding="5vp"
        ohos:orientation="vertical">

        <TextField
            ohos:id="$+id:call_history_warn"
            style="$style:MediumFont"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:padding="5vp"
            ohos:text="$string:call_history_remove_before_date_warning" />

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="horizontal">

            <DatePicker
                ohos:id="$+id:datePicker"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:layout_gravity="end"
                ohos:calendarViewShown="false"
                ohos:datePickerMode="spinner" />

            <TimePicker
                ohos:id="$+id:timePicker"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:layout_gravity="end"
                ohos:calendarViewShown="false"
                ohos:setWheelModeEnabled="false" />
        </DirectionalLayout>

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:top_padding="10vp">

            <Button
                ohos:id="$+id:cancelButton"
                style="$style:ButtonTop"
                ohos:text="$string:cancel" />

            <Button
                ohos:id="$+id:purgeButton"
                style="$style:ButtonTop"
                ohos:start_margin="4vp"
                ohos:text="$string:purge" />
        </DirectionalLayout>
    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:callListContainer"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:top_margin="8vp"
        ohos:weight="1" />

</DirectionalLayout>