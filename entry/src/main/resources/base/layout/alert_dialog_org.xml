<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:mainContent"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:background_element="$graphic:background_alert_dialog"
    ohos:margin="$float:screen_padding_small"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding_small">

    <Text
        ohos:id="$+id:alertTitle"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text="{Alert dialog title}"
        ohos:text_alignment="vertical_center"
        ohos:text_size="$float:medium_font"/>

    <ScrollView
        ohos:height="match_content"
        ohos:width="match_parent">

        <DirectionalLayout
            ohos:id="$+id:alertContent"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="vertical">

            <Text
                ohos:id="$+id:alertText"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:text="{Alert dialog text}"
                ohos:text_alignment="vertical_center"
                ohos:text_size="$float:medium_font"/>
        </DirectionalLayout>
    </ScrollView>

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:top_padding="10vp">

        <Button
            ohos:id="$+id:cancelButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel"/>

        <Button
            ohos:id="$+id:okButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:end_margin="0vp"
            ohos:text="$string:ok"/>
    </DirectionalLayout>
</DirectionalLayout>