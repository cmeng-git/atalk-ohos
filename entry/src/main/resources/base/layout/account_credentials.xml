<?xml version="1.0" encoding="utf-8"?>

<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:alignment="center" >

    <Text
        ohos:id="$+id:username_label"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_bottom="$id:username"
        ohos:align_top="$id:username"
        ohos:end_margin="5vp"
        ohos:text_alignment="vertical_center|end"
        ohos:text="$string:username_" />

    <TextField
        ohos:id="$+id:username"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:text_alignment="center"
        ohos:end_of="$id:username_label"
        ohos:hint="$string:username_hint" />

    <Text
        ohos:id="$+id:password_label"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_bottom="$id:password"
        ohos:align_top="$id:password"
        ohos:below="$id:username"
        ohos:end_margin="5vp"
        ohos:start_of="$id:password"
        ohos:text_alignment="vertical_center|end"
        ohos:text="$string:password_" />

    <TextField
        ohos:id="$+id:password"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:align_start="$id:username"
        ohos:below="$id:username"
        ohos:top_margin="5vp"
        ohos:hint="$string:password"
        ohos:text_input_type="pattern_password" />

    <Checkbox
        ohos:id="$+id:show_password"
        ohos:element_left="$graphic:checkbox_password_view"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_end="$id:password"
        ohos:align_top="$id:password"
        ohos:top_margin="10vp"
        ohos:end_margin="5vp" />

    <Checkbox
        ohos:id="$+id:store_password"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_parent_start="$id:ib_registration"
        ohos:below="$id:password"
        ohos:top_margin="5vp"
        ohos:text="$string:save_password" />

    <Checkbox
        ohos:id="$+id:ib_registration"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_parent_end="true"
        ohos:below="$id:password"
        ohos:top_margin="5vp"
        ohos:text="$string:ibr_registration" />

    <Checkbox
        ohos:id="$+id:serverOverridden"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:below="$id:store_password"
        ohos:top_margin="10vp"
        ohos:text="$string:account_server_override" />

    <Image
        ohos:id="$+id:showCert"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:align_parent_end="true"
        ohos:align_bottom="$id:serverOverridden"
        ohos:padding="4vp"
        ohos:image_src="$media:ic_certificate_light" />

    <DirectionalLayout
        ohos:id="$+id:serverField"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:below="$id:serverOverridden"
        ohos:orientation="horizontal">

        <TextField
            ohos:id="$+id:serverIpField"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="0vp"
            ohos:weight="7"
            ohos:hint="$string:account_server_ip"
            ohos:text_input_type="pattern_null" />

        <TextField
            ohos:id="$+id:serverPortField"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="0vp"
            ohos:start_margin="$float:between_padding"
            ohos:weight="3"
            ohos:text_input_type="pattern_null"
            ohos:text="$string:xmpp_server_port" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:reasonField"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:below="$id:serverField"
        ohos:top_margin="$float:between_padding"
        ohos:orientation="vertical">

        <Text
            ohos:id="$+id:reason_label"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:reason" />

        <Text
            ohos:id="$+id:reason_field"
            ohos:text_size="$float:medium_font"
            ohos:max_text_lines="6"
            ohos:text_input_type="pattern_text_web_content" />

        <Picker
            ohos:id="$+id:dnssecModeSpinner"
            ohos:background_element="$media:spinner_dark"
            ohos:top_margin="5vp" />
    </DirectionalLayout>

</DependentLayout>