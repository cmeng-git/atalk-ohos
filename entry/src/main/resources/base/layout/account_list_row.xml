<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:min_height="$float:account_list_row_height"
    ohos:start_margin="5vp"
    ohos:alignment="vertical_center"
    ohos:orientation="horizontal" >

    <ToggleButton
        ohos:id="$+id:accountToggleButton"
        ohos:width="match_content"
        ohos:height="match_content" />

    <Image
        ohos:id="$+id:accountProtoIcon"
        ohos:width="32vp"
        ohos:height="32vp"
        ohos:start_margin="5vp"
        ohos:image_src="$media:jabber_logo" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:start_margin="15vp"
        ohos:alignment="vertical_center"
        ohos:orientation="vertical" >

        <Text
            ohos:id="$+id:protocolProvider"
            ohos:text_size="$float:medium_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:max_text_lines="1"
            ohos:text="atalkuser@atalk.sytes.net" />

        <DirectionalLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_margin="3vp"
            ohos:alignment="vertical_center"
            ohos:orientation="horizontal" >

            <Image
                ohos:id="$+id:accountStatusIcon"
                ohos:width="24vp"
                ohos:height="24vp"
                ohos:image_src="$media:jabber_status_offline" />

            <Text
                ohos:id="$+id:accountStatus"
                ohos:text_size="$float:medium_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:start_margin="5vp"
                ohos:text_alignment="vertical_center"
                ohos:text="$string:offline" />
        </DirectionalLayout>

    </DirectionalLayout>
</DirectionalLayout>