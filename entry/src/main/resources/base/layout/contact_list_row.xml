<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="$float:contact_list_row_height"
    ohos:background_element="$graphic:list_selector_state"
    ohos:start_padding="5vp"
    ohos:end_padding="5vp">

    <DependentLayout
        ohos:id="$+id:avatarLayout"
        ohos:width="$float:contact_list_avatar_width"
        ohos:height="match_parent"
        ohos:padding="5vp">

        <Image
            ohos:id="$+id:avatarIcon"
            ohos:width="match_parent"
            ohos:height="match_parent"
            ohos:scale_mode="center"
            ohos:image_src="$media:avatar" />

        <Image
            ohos:id="$+id:contactBlockIcon"
            ohos:width="18vp"
            ohos:height="18vp"
            ohos:align_bottom="$id:avatarIcon"
            ohos:align_parent_start="true"
            ohos:image_src="$media:contact_block" />

        <Image
            ohos:id="$+id:contactStatusIcon"
            ohos:width="16vp"
            ohos:height="16vp"
            ohos:align_bottom="$id:avatarIcon"
            ohos:align_parent_end="true"
            ohos:image_src="$media:contact_online" />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:contact_view"
        ohos:orientation="vertical"
        ohos:background_element="$graphic:list_selector_state"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:end_of="$id:avatarLayout"
        ohos:alignment="bottom"
        ohos:bottom_padding="4vp"
        ohos:start_padding="10vp">

        <Text
            ohos:id="$+id:displayName"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:max_text_lines="1"
            ohos:text="Displayname@server.com"
            ohos:text_color="$color:list_selection_color" />

        <Text
            ohos:id="$+id:statusMessage"
            ohos:text_size="$float:small_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:layout_alignment="start"
            ohos:bottom_margin="5vp"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:text_alignment="bottom"
            ohos:max_text_lines="1"
            ohos:text="Some long status message"
            ohos:text_color="$color:list_selection_color" />
    </DirectionalLayout>

    <org.atalk.ohos.gui.widgets.UnreadCountCustomView
        ohos:id="$+id:unread_count"
        ohos:width="$float:IconSize"
        ohos:height="$float:IconSize"
        ohos:start_of="$id:callButtonLayout"
        ohos:layout_alignment="vertical_center" />

    <DirectionalLayout
        ohos:id="$+id:callButtonLayout"
        ohos:width="match_content"
        ohos:height="match_parent"
        ohos:align_parent_end="true"
        ohos:alignment="vertical_center"
        ohos:orientation="horizontal">

        <Image
            ohos:id="$+id:buttonSeparatorView"
            ohos:width="1vp"
            ohos:height="40vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:contact_list_v_separator_dark" />

        <Image
            ohos:id="$+id:contactCallButton"
            ohos:background_element="$graphic:list_selector_state"
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:layout_alignment="vertical_center"
            ohos:padding="10vp"
            ohos:clickable="true"
            ohos:component_description="$string:call_audio"
            ohos:focusable="focus_adaptable"
            ohos:min_height="$float:min_button_height"
            ohos:min_width="$float:min_button_width"
            ohos:scale_mode="center"
            ohos:image_src="$media:contact_call" />

        <Image
            ohos:id="$+id:buttonSeparatorView2"
            ohos:width="1vp"
            ohos:height="40vp"
            ohos:layout_alignment="vertical_center"
            ohos:image_src="$media:contact_list_v_separator_dark" />

        <Image
            ohos:id="$+id:contactCallVideoButton"
            ohos:background_element="$graphic:list_selector_state"
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:layout_alignment="vertical_center"
            ohos:padding="10vp"
            ohos:clickable="true"
            ohos:component_description="$string:call_video"
            ohos:focusable="focus_adaptable"
            ohos:min_height="$float:min_button_height"
            ohos:min_width="$float:min_button_width"
            ohos:scale_mode="center"
            ohos:image_src="$media:contact_call_video" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="$media:contact_list_h_separator_dark" />

</DependentLayout>