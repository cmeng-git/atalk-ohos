<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:tools="http://schemas.huawei.com/tools"
    ohos:width="match_parent"
    ohos:height="match_content">

    <DependentLayout
        ohos:id="$+id:outgoingAvatarView"
        ohos:width="$float:chat_avatar"
        ohos:height="$float:chat_avatar"
        ohos:align_parent_end="true"
        ohos:end_margin="5vp">

        <Image
            ohos:id="$+id:outgoingAvatarIcon"
            ohos:width="$float:chat_avatar"
            ohos:height="match_parent"
            ohos:scale_mode="center"
            ohos:end_margin="1vp"
            ohos:image_src="$media:avatar" />

        <Image
            ohos:id="$+id:outgoingStatusIcon"
            ohos:width="14vp"
            ohos:height="14vp"
            ohos:align_parent_bottom="true"
            ohos:align_parent_end="true"
            ohos:image_src="$media:contact_offline" />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:outgoingMessageHolder"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:start_margin="30vp"
        ohos:bottom_margin="4vp"
        ohos:start_of="$id:outgoingAvatarView"
        ohos:background_element="$graphic:holder_message_correction"
        ohos:alignment="end"
        ohos:orientation="vertical"
        ohos:padding="7vp">

        <Text
            ohos:id="$+id:outgoingMessageView"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:end_margin="$float:chat_text_margin"
            ohos:text_color="$color:black" />

        <DirectionalLayout
            ohos:id="$+id:msg_info_layout"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:outgoingTimeView"
                ohos:text_size="$float:small_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:end_margin="$float:chat_text_margin"
                ohos:text_color="$color:grey"
                tools:ignore="RtlHardcoded" />

            <Image
                ohos:id="$+id:msg_delivery_status"
                ohos:scale_mode="center"
                ohos:width="14vp"
                ohos:height="14vp"
                ohos:image_src="$media:ic_msg_delivery_read" />

            <Image
                ohos:id="$+id:encStateView"
                ohos:width="18vp"
                ohos:height="18vp"
                ohos:start_margin="4vp"
                ohos:image_src="$media:encryption_omemo" />
        </DirectionalLayout>
    </DirectionalLayout>

    <Image
        ohos:id="$+id:messageArrowView"
        ohos:width="match_content"
        ohos:height="$float:chat_arrow_height"
        ohos:end_margin="$id:outgoingMessageHolder"
        ohos:start_margin="-10vp"
        ohos:top_margin="$float:chat_arrow_top"
        ohos:image_src="$media:message_arrow_out_correction_dark" />

</DependentLayout>