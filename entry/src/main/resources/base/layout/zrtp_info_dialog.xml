<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <Text
        ohos:id="$+id:security_cipher"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:security_cipher" />

    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="5vp"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:secure_audio_text"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:security_secure_audio" />

        <Image
            ohos:id="$+id:secure_audio_icon"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:layout_alignment="start|vertical_center"
            ohos:start_margin="10vp"
            ohos:image_src="$media:secure_audio_off_light" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="5vp"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:secure_video_text"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:security_secure_video" />

        <Image
            ohos:id="$+id:secure_video_icon"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:scale_mode="center"
            ohos:start_margin="10vp"
            ohos:image_src="$media:secure_video_off_light" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="5vp"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:security_compare"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:security_compare_with_partner_short" />

        <Text
            ohos:id="$+id:security_auth_str"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:start_margin="10vp"
            ohos:text="\? \? \? \? \?" />

    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="20vp"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:zrtp_ok"
            ohos:background_element="$graphic:btn_state_action"
            ohos:focusable="focus_adaptable"
            ohos:text="$string:ok" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:security_confirm"
            ohos:background_element="$graphic:btn_state_action"
            ohos:focusable="focus_adaptable"
            ohos:text="$string:confirm" />
    </DirectionalLayout>
</DirectionalLayout>