<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:padding="3vp">

    <WebView
        ohos:id="$+id:certificateInfo"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:align_parent_top="true"
        ohos:bottom_margin="100vp"
        ohos:text="{View SSL Certificate}"/>

    <DirectionalLayout
        ohos:height="100vp"
        ohos:width="match_parent"
        ohos:align_parent_bottom="true"
        ohos:orientation="vertical"
        ohos:padding="7vp">

        <Checkbox
            ohos:id="$+id:alwaysTrust"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:text="$string:trust_always"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Button
                ohos:id="$+id:cancel"
                ohos:text="$string:cancel"
                ohos:background_element="$graphic:btn_state_action"/>

            <Component
                ohos:id="$+id:centerShim"
                ohos:height="0vp"
                ohos:width="0vp"
                ohos:margin="2vp"
                ohos:visibility="invisible"/>

            <Button
                ohos:id="$+id:continueBtn"
                ohos:text="$string:proceed"
                ohos:background_element="$graphic:btn_state_action"/>
        </DirectionalLayout>
    </DirectionalLayout>
</DependentLayout>
