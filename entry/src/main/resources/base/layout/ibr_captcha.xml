<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding_small">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp"
        ohos:layout_alignment="vertical_center">

        <Text
            ohos:id="$+id:username_label"
            ohos:text_size="$float:medium_font"
            ohos:width="80vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:username_" />

        <Image
            ohos:id="$+id:star1"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:image_src="$media:ic_star" />

        <TextField
            ohos:id="$+id:username"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:hint="$string:username_hint"
            ohos:text_input_type="pattern_text_email_address" />

    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:entry_fields"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="vertical"
        ohos:layout_alignment="center">
    </DirectionalLayout>

    <DependentLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="5vp">

        <Text
            ohos:id="$+id:password_label"
            ohos:text_size="$float:medium_font"
            ohos:width="80vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:password_" />

        <Image
            ohos:id="$+id:star"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:end_of="$id:password_label"
            ohos:image_src="$media:ic_star" />

        <TextField
            ohos:id="$+id:password"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent"
            ohos:end_of="$id:star"
            ohos:hint="$string:password"
            ohos:text_input_type="pattern_password" />

        <Checkbox
            ohos:id="$+id:show_password"
            ohos:check_element="$graphic:checkbox_password_view"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_end="$id:password"
            ohos:top_margin="10vp"
            ohos:end_margin="5vp" />
    </DependentLayout>

    <ScrollView
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1">

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <Checkbox
                ohos:id="$+id:serverOverridden"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:text="$string:account_server_override" />

            <DirectionalLayout
                ohos:id="$+id:serverField"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:bottom_margin="$float:between_padding"
                ohos:orientation="horizontal">

                <TextField
                    ohos:id="$+id:serverIpField"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="0vp"
                    ohos:weight="7"
                    ohos:hint="$string:account_server_ip"
                    ohos:text_input_type="pattern_null" />

                <TextField
                    ohos:id="$+id:serverPortField"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="0vp"
                    ohos:start_margin="$float:between_padding"
                    ohos:weight="3"
                    ohos:text_input_type="pattern_null"
                    ohos:text="$string:xmpp_server_port" />
            </DirectionalLayout>

            <Text
                ohos:id="$+id:reason_label"
                ohos:text_size="$float:medium_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:text="$string:reason" />

            <Text
                ohos:id="$+id:reason_field"
                ohos:background_element="$graphic:bg_text"
                ohos:bottom_margin="$float:between_padding" />

            <DirectionalLayout
                ohos:id="$+id:captcha_container"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="vertical">

                <Text
                    ohos:id="$+id:url_label"
                    ohos:text_size="$float:medium_font"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text="Captcha_webPage" />

                <Text
                    ohos:id="$+id:url_link"
                    ohos:background_element="$graphic:bg_text"
                    ohos:bottom_margin="$float:between_padding" />

                <Image
                    ohos:id="$+id:captcha"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:layout_alignment="horizontal_center"
                    ohos:image_src="$media:captcha" />

                <TextField
                    ohos:id="$+id:input"
                    ohos:text_size="$float:medium_font"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:top_margin="5vp"
                    ohos:hint="$string:captcha_ibr_hint"
                    ohos:text_input_type="pattern_null" />
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_Cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:end_margin="2vp"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:button_Submit"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:submit" />

        <Button
            ohos:id="$+id:button_OK"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:ok" />
    </DirectionalLayout>

</DirectionalLayout>
