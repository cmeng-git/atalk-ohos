<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:jid_label"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:account" />

        <Text
            ohos:id="$+id:jid_account"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:mucName"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:muc_name" />

        <TextField
            ohos:id="$+id:mucName_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:NickName"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:nickname" />

        <TextField
            ohos:id="$+id:nickName_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="8vp">

        <Text
            ohos:id="$+id:password"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:password_" />

        <DependentLayout
            ohos:id="$+id:pwdTypingArea"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal">

            <TextField
                ohos:id="$+id:passwordField"
                ohos:background_element="$graphic:bg_text_field"
                ohos:width="match_parent"
                ohos:hint="$string:password"
                ohos:text_input_type="pattern_password" />

            <Checkbox
                ohos:id="$+id:show_password"
                ohos:check_element="$graphic:checkbox_password_view"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_end="$id:passwordField"
                ohos:text_alignment="vertical_center"
                ohos:end_margin="5vp" />
        </DependentLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:chatRoom_Name"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:chatroom" />

        <Checkbox
            ohos:id="$+id:cb_bookmark"
            ohos:width="0vp"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:clickable="true"
            ohos:text="$string:chatroom_bookmark" />

        <Checkbox
            ohos:id="$+id:cb_autojoin"
            ohos:width="0vp"
            ohos:height="match_content"
            ohos:weight="1"
            ohos:clickable="true"
            ohos:text="$string:chatroom_auto_join" />

    </DirectionalLayout>

    <Text
        ohos:id="$+id:jid_chatroom"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent" />
</DirectionalLayout>