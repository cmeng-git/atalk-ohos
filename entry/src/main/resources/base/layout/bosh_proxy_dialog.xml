<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:bosh_proxy_type" />

        <Picker
            ohos:id="$+id:boshProxyType"
            ohos:background_element="$media:spinner_dark"
            ohos:width="0vp"
            ohos:weight="1" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:boshURL_setting"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="vertical"
        ohos:bottom_padding="5vp">

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="horizontal"
            ohos:bottom_padding="5vp">

            <Text
                ohos:text_size="$float:medium_font"
                ohos:width="100vp"
                ohos:height="match_content"
                ohos:text_alignment="vertical_center"
                ohos:text="$string:bosh_proxy_url" />

            <TextField
                ohos:id="$+id:boshURL"
                ohos:background_element="$graphic:bg_text_field"
                ohos:width="match_parent"
                ohos:hint="$string:bosh_url_hint"/>
        </DirectionalLayout>

        <Checkbox
            ohos:id="$+id:cbHttpProxy"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:clickable="true"
            ohos:focusable="focus_adaptable"
            ohos:text="$string:bosh_proxy_use_http" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:bosh_proxy_host" />

        <TextField
            ohos:id="$+id:proxyHost"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:bosh_proxy_port" />

        <TextField
            ohos:id="$+id:proxyPort"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:username_" />

        <TextField
            ohos:id="$+id:proxyUsername"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="8vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:password_" />

        <DependentLayout
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal">

            <TextField
                ohos:id="$+id:proxyPassword"
                ohos:background_element="$graphic:bg_text_field"
                ohos:width="match_parent"
                ohos:hint="$string:password"
                ohos:text_input_type="pattern_password" />

            <Checkbox
                ohos:id="$+id:show_password"
                ohos:check_element="$graphic:checkbox_password_view"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_end="$id:proxyPassword"
                ohos:vertical_center="true"
                ohos:end_margin="5vp" />
        </DependentLayout>

    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:horizontal_center="true"
        ohos:top_margin="$float:between_padding"
        ohos:align_baseline="false"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_Cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:button_Apply"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="2vp"
            ohos:text="$string:apply" />
    </DirectionalLayout>
</DirectionalLayout>