<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding" >

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:display_name" />

    <TextField
        ohos:id="$+id:certDisplayName"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:bottom_margin="$float:between_padding"
        ohos:text_input_type="pattern_null" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:orientation="horizontal">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="0vp"
            ohos:height="match_content"
            ohos:text_alignment="bottom"
            ohos:weight="1"
            ohos:text="$string:certconfig_keystore_file" />

        <Button
            ohos:id="$+id:browse"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:padding="3vp"
            ohos:element_start="$media:ic_folder_light" />
    </DirectionalLayout>

    <TextField
        ohos:id="$+id:certFileName"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:bottom_margin="$float:between_padding"
        ohos:text_input_type="pattern_null"
        ohos:scrollable="true"
        ohos:max_text_lines="1" />

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:certconfig_keystore_type" />

    <ListContainer
        ohos:id="$+id:cboKeyStoreType"
        ohos:background_element="$media:spinner_dark"
        ohos:bottom_margin="$float:between_padding" />

    <DependentLayout
        ohos:id="$+id:pwdTypingArea"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:orientation="horizontal">

        <TextField
            ohos:id="$+id:keyStorePassword"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent"
            ohos:hint="$string:password"
            ohos:text_input_type="pattern_password" />

        <Checkbox
            ohos:id="$+id:show_password"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_end="$id:keyStorePassword"
            ohos:vertical_center="true"
            ohos:end_margin="5vp"
            ohos:element_start="$graphic:checkbox_password_view" />
    </DependentLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:orientation="horizontal">

        <DirectionalLayout
            ohos:width="0vp"
            ohos:height="match_content"
            ohos:bottom_margin="$float:label_padding"
            ohos:weight="1"
            ohos:orientation="vertical">

            <Checkbox
                ohos:id="$+id:chkSavePassword"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:text="$string:save_password" />

            <Text
                ohos:text_size="$float:medium_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:text_alignment="bottom"
                ohos:text="$string:certconfig_alias" />
        </DirectionalLayout>

        <Button
            ohos:id="$+id:showCert"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_alignment="bottom"
            ohos:padding="3vp"/>
    </DirectionalLayout>

    <ListContainer
        ohos:id="$+id:cboAlias"
        ohos:background_element="$media:spinner_dark"
        ohos:bottom_margin="$float:between_padding" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_Cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:button_OK"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:text="$string:ok" />
    </DirectionalLayout>
</DirectionalLayout>