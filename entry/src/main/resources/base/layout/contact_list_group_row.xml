<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="$float:contact_list_group_row_height"
    ohos:background_element="$color:contact_list_group">

    <Text
        ohos:id="$+id:groupName"
        ohos:width="match_content"
        ohos:height="match_parent"
        ohos:start_margin="30vp"
        ohos:text_alignment="left|center"
        ohos:text="$string:remove_group"
        ohos:text_color="$color:textColorWhite"
        ohos:text_weight="500" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="$color:contact_list_divider" />

    <DirectionalLayout
        ohos:width="7vp"
        ohos:height="match_parent"
        ohos:align_parent_end="true"
        ohos:background_element="$media:chat_separator" />

    <Image
        ohos:id="$+id:groupIndicatorView"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:scale_mode="center"
        ohos:start_margin="6vp"
        ohos:image_src="$media:collapsed_dark" />

</DependentLayout>