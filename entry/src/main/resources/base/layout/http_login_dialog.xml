<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:username_label"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:username_" />

        <TextField
            ohos:id="$+id:username"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:password_label"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:password_" />

        <DependentLayout
            ohos:id="$+id:pwdTypingArea"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:alignment="center"
            ohos:bottom_margin="$float:between_padding"
            ohos:orientation="horizontal">

            <TextField
                ohos:id="$+id:passwordField"
                ohos:background_element="$graphic:bg_text_field"
                ohos:width="match_parent"
                ohos:hint="$string:password"
                ohos:text_input_type="pattern_password" />

            <Checkbox
                ohos:id="$+id:show_password"
                ohos:check_element="$graphic:checkbox_password_view"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_end="$id:passwordField"
                ohos:top_margin="10vp"
                ohos:end_margin="5vp" />
        </DependentLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:horizontal_center="true"
        ohos:top_margin="$float:between_padding"
        ohos:align_baseline="false"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:enabled="true"
            ohos:text="$string:cancel" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:button_signin"
            ohos:background_element="$graphic:btn_state_action"
            ohos:enabled="true"
            ohos:text="$string:sign_in" />
    </DirectionalLayout>
</DirectionalLayout>