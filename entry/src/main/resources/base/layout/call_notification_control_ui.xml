<?xml version="1.0" encoding="utf-8"?>
<DepedentLayout xmlns:ohos="http://schemas.ohos.com/apk/res/ohos"
    ohos:id="$+id:notificationContent"
    ohos:width="match_parent"
    ohos:height="64vp"
    ohos:background="$color:background_light"
    ohos:orientation="vertical">

    <ImageView
        ohos:id="$+id:avatarView"
        ohos:width="60vp"
        ohos:height="60vp"
        ohos:centerVertical="true"
        ohos:padding="2vp"
        ohos:scaleType="fitCenter"
        ohos:src="$media:ic_logo" />

    <Text
        ohos:id="$+id:calleeDisplayName"
        style="$style:MediumFont"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:alignParentStart="false"
        ohos:alignParentTop="true"
        ohos:marginStart="8vp"
        ohos:marginTop="4vp"
        ohos:toEndOf="$id:avatarView"
        ohos:singleLine="true"
        ohos:text="CalleeDisplayName@server.com"
        ohos:textColor="$color:textColorBlack" />

    <Text
        ohos:id="$+id:call_duration"
        style="$style:MediumFont"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:alignParentTop="true"
        ohos:alignParentEnd="true"
        ohos:marginTop="4vp"
        ohos:marginEnd="8vp"
        ohos:singleLine="true"
        ohos:text="00:00:00"
        ohos:textColor="$color:textColorBlack" />

    <DirectionalLayout
        ohos:width="fill_parent"
        ohos:height="match_content"
        ohos:alignParentBottom="true"
        ohos:toEndOf="$id:avatarView"
        ohos:orientation="horizontal"
        ohos:weightSum="6">

        <Button
            ohos:id="$+id:button_back_to_call"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_button"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:send_call_dark" />

        <Button
            ohos:id="$+id:button_speakerphone"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_button"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:call_receiver_on_dark" />

        <Button
            ohos:id="$+id:button_mute"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_button"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:call_microphone_dark" />

        <Button
            ohos:id="$+id:button_hold"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_button"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:call_hold_on_dark" />

        <Button
            ohos:id="$+id:button_transfer"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_button"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:call_transfer_dark" />

        <Button
            ohos:id="$+id:button_hangup"
            style="$style:NotificationCtrlButton"
            ohos:width="0vp"
            ohos:marginEnd="4vp"
            ohos:weight="1"
            ohos:background="$color:status_bar_hangup"
            ohos:padding="2vp"
            ohos:scaleType="centerInside"
            ohos:src="$media:call_hangup_dark" />
    </DirectionalLayout>

</DepedentLayout>
