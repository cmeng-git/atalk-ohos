<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="110vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:service_gui_JINGLE_EDIT_JID" />

        <TextField
            ohos:id="$+id:jidAddress"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <Checkbox
        ohos:id="$+id:relaySupportCheckbox"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:service_gui_JINGLE_EDIT_SUPPORT_RELAY" />

</DirectionalLayout>


