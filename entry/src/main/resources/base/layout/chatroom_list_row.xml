<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="$float:contact_list_row_height"
    ohos:background_element="$color:background_light"
    ohos:start_padding="10vp"
    ohos:end_padding="10vp">

    <DependentLayout
        ohos:id="$+id:avatarLayout"
        ohos:width="$float:contact_list_avatar_width"
        ohos:height="match_parent"  >

        <Image
            ohos:id="$+id:room_icon"
            ohos:width="48vp"
            ohos:height="48vp"
            ohos:scale_mode="center"
            ohos:image_src="$media:ic_chatroom" />

        <Checkbox
            ohos:id="$+id:cb_bookmark"
            ohos:scaleX="1.2"
            ohos:scaleY="1.2"
            ohos:width="30vp"
            ohos:height="30vp"
            ohos:element_start="$media:btn_star_off_pressed"
            ohos:align_bottom="$id:room_icon"
            ohos:align_parent_end="true"
            ohos:focusable="focus_adaptable" />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:room_view"
        ohos:orientation="vertical"
        ohos:background_element="$graphic:list_selector_state"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:right_of="$id:avatarLayout"
        ohos:alignment="bottom"
        ohos:bottom_padding="4vp"
        ohos:start_padding="10vp">

        <Text
            ohos:id="$+id:room_status"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:max_text_lines="1"
            ohos:text="chatroom@conference.server.com"
            ohos:text_color="$color:list_selection_color" />

        <Text
            ohos:id="$+id:room_name"
            ohos:text_size="$float:small_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:truncation_mode="ellipsis_at_end"
            ohos:max_text_lines="1"
            ohos:text="chatroom@conference.server.com"
            ohos:text_color="$color:list_selection_color" />
    </DirectionalLayout>

    <org.atalk.ohos.gui.widgets.UnreadCountCustomView
        ohos:id="$+id:unread_count"
        ohos:width="$float:IconSize"
        ohos:height="$float:IconSize"
        ohos:start_of="$id:cb_autojoin"
        ohos:layout_alignment="vertical_center" />

    <Checkbox
        ohos:id="$+id:cb_autojoin"
        ohos:width="match_content"
        ohos:height="match_parent"
        ohos:align_parent_end="true"
        ohos:check_element="$graphic:checkbox_autojoin"
        ohos:focusable="focus_disable"
        ohos:layout_alignment="vertical_center" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="1vp"
        ohos:align_parent_bottom="true"
        ohos:background_element="$media:contact_list_h_separator_dark" />
</DependentLayout>