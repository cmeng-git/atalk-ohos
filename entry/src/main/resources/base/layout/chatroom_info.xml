<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <ScrollView
        ohos:width="match_parent"
        ohos:height="match_content">

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_name" />

                <Text
                    ohos:id="$+id:roominfo_name"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_subject" />

                <Text
                    ohos:id="$+id:roominfo_subject"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:min_height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_description" />

                <Text
                    ohos:id="$+id:roominfo_description"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_occupants" />

                <Text
                    ohos:id="$+id:roominfo_occupants"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:max_text_lines="1"
                    ohos:truncation_mode="auto_scrolling"
                    ohos:focusable="focus_adaptable"
                    ohos:scrollable="true"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_max_history_fetch" />

                <Text
                    ohos:id="$+id:maxhistoryfetch"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_contact_jid" />

                <Text
                    ohos:id="$+id:roominfo_contactjid"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:min_height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_language" />

                <Text
                    ohos:id="$+id:roominfo_lang"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal"
                ohos:bottom_padding="5vp">

                <Text
                    ohos:text_size="$float:medium_font"
                    ohos:width="100vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:chatroom_info_ldap_group" />

                <Text
                    ohos:id="$+id:roominfo_ldapgroup"
                    ohos:background_element="$graphic:bg_text_field"
                    ohos:width="match_parent"
                    ohos:height="$float:text_entry_height" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:top_margin="$float:between_padding"
                ohos:orientation="horizontal">

                <Checkbox
                    ohos:id="$+id:muc_membersonly"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="3"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_member_only" />

                <Component
                    ohos:id="$+id:centerShim1"
                    ohos:width="0vp"
                    ohos:height="0vp"
                    ohos:visibility="invisible" />

                <Checkbox
                    ohos:id="$+id:muc_nonanonymous"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="4"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_non_anonymous" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:bottom_margin="$float:between_padding"
                ohos:orientation="horizontal">

                <Checkbox
                    ohos:id="$+id:muc_persistent"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="3"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_persistent" />

                <Component
                    ohos:id="$+id:centerShim2"
                    ohos:width="0vp"
                    ohos:height="0vp"
                    ohos:visibility="invisible" />

                <Checkbox
                    ohos:id="$+id:muc_passwordprotected"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="4"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_password_protected" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:bottom_margin="$float:between_padding"
                ohos:orientation="horizontal">

                <Checkbox
                    ohos:id="$+id:muc_moderated"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="3"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_moderated" />

                <Component
                    ohos:id="$+id:centerShim3"
                    ohos:width="0vp"
                    ohos:height="0vp"
                    ohos:visibility="invisible" />

                <Checkbox
                    ohos:id="$+id:room_subject_modifiable"
                    ohos:width="0vp"
                    ohos:height="match_content"
                    ohos:weight="4"
                    ohos:clickable="false"
                    ohos:text="$string:chatroom_info_subject_modifiable" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="horizontal">

                <Component
                    ohos:id="$+id:centerShim"
                    ohos:width="0vp"
                    ohos:height="0vp"
                    ohos:horizontal_center="true"
                    ohos:weight="1"
                    ohos:visibility="invisible" />

                <Button
                    ohos:id="$+id:button_ok"
                    ohos:background_element="$graphic:btn_state_action"
                    ohos:weight="1"
                    ohos:text="$string:ok" />
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>

</DirectionalLayout>