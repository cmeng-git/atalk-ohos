<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <Text
        ohos:id="$+id:localFingerprintLbl"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:omemo_authbuddy_local_fingerprint" />

    <Text
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:top_margin="$float:between_padding"
        ohos:text="$string:omemo_authbuddy_authenticate_info" />

    <ListContainer
        ohos:id="$+id:fp_list"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:cancelButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:okButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:omemo_authbuddy_verify_buddy" />
    </DirectionalLayout>

</DirectionalLayout>
