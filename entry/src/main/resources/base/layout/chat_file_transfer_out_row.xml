<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_content"
    ohos:height="match_content">

    <DependentLayout
        ohos:id="$+id:avatarView"
        ohos:width="$float:chat_avatar"
        ohos:height="$float:chat_avatar"
        ohos:align_parent_end="true"
        ohos:end_margin="5vp">

        <Button
            ohos:id="$+id:button_file"
            ohos:width="64vp"
            ohos:height="match_content"
            ohos:align_parent_start="true"
            ohos:background_element="@ohos:color/transparent"
            ohos:component_description="{toolTip}"
            ohos:image_src="$media:file_icon" />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:msg_body_layout"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:start_margin="30vp"
        ohos:bottom_margin="4vp"
        ohos:start_of="$id:avatarView"
        ohos:background_element="@graphic:holder_filexfer"
        ohos:orientation="vertical"
        ohos:start_padding="10vp"
        ohos:top_padding="5vp"
        ohos:end_padding="10vp"
        ohos:bottom_padding="5vp">

        <Image
            ohos:id="$+id:sticker"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:max_height="320vp"
            ohos:scale_mode="center" />

        <include layout="$layout:player_audio_ui" />

        <Text
            ohos:id="$+id:filexferFileNameView"
            ohos:text_size="$float:small_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text_alignment="start"
            ohos:text="{FileName text}"
            ohos:text_color="$color:grey" />

        <Text
            ohos:id="$+id:filexferStatusView"
            ohos:text_size="$float:small_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_alignment="start"
            ohos:bottom_padding="5vp"
            ohos:text="{Status text}"
            ohos:text_color="$color:black" />

        <Text
            ohos:id="$+id:errorView"
            ohos:text_size="$float:small_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_alignment="start"
            ohos:text="{Error text}"
            ohos:text_color="$color:red"
            ohos:visibility="hide" />

        <ProgressBar
            ohos:id="$+id:file_progressbar"
            ohos:width="match_parent"
            ohos:height="20vp"
            ohos:horizontal_center="true"
            ohos:top_padding="5vp"
            ohos:bottom_padding="5vp"
            ohos:visibility="hide" />

        <Text
            ohos:id="$+id:file_progressSpeed"
            ohos:text_size="$float:small_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:start_margin="$float:chat_text_margin"
            ohos:text_alignment="start"
            ohos:text="{Transfer Speed}"
            ohos:text_color="$color:blue"
            ohos:visibility="hide" />

        <Text
            ohos:id="$+id:file_estTime"
            ohos:text_size="$float:small_font"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:start_margin="$float:chat_text_margin"
            ohos:text_alignment="start"
            ohos:top_padding="5vp"
            ohos:text="{Time left}"
            ohos:text_color="$color:blue"
            ohos:visibility="hide" />

        <DirectionalLayout
            ohos:id="$+id:msg_info_layout"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:layout_alignment="end"
            ohos:orientation="horizontal">

            <Text
                ohos:id="$+id:xferTimeView"
                ohos:text_size="$float:small_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:end_margin="$float:chat_text_margin"
                ohos:text_color="$color:grey" />

            <Image
                ohos:id="$+id:encFileStateView"
                ohos:width="18vp"
                ohos:height="18vp"
                ohos:image_src="$media:encryption_omemo" />
        </DirectionalLayout>

        <include layout="$layout:chat_file_transfer_buttons" />

    </DirectionalLayout>

    <Image
        ohos:id="$+id:filexferArrowView"
        ohos:width="match_content"
        ohos:height="$float:chat_arrow_height"
        ohos:end_of="$id:msg_body_layout"
        ohos:start_margin="-10vp"
        ohos:top_margin="$float:chat_arrow_top"
        ohos:image_src="$media:file_xfer_arrow_out" />

</DependentLayout>