<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical" >

    <Text
        ohos:id="$+id:chatRoom_Name"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:chatroom" />

    <TextField
        ohos:id="$+id:chatRoom_Jid"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:text="$string:chatroom"
        ohos:enabled="false" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_padding ="10vp">

        <Text
            ohos:id="$+id:NickName"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:nickname" />

        <TextField
            ohos:id="$+id:NickName_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:top_padding="5vp">

        <Text
            ohos:id="$+id:chatRoom_Subject"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:subject" />

        <TextField
            ohos:id="$+id:chatRoom_Subject_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:hint="$string:group_chat"
            ohos:width="match_parent" />
    </DirectionalLayout>

</DirectionalLayout>