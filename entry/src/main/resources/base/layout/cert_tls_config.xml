<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:clickable="true"
    ohos:focusable="focus_adaptable"
    ohos:padding="$float:screen_padding">

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:certconfig_revocation_title" />

    <Checkbox
        ohos:id="$+id:cb_crl"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:list_padding"
        ohos:text="$string:certconfig_revocation_check_enabled" />

    <Checkbox
        ohos:id="$+id:cb_ocsp"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:list_padding"
        ohos:text="$string:certconfig_revocation_ocsp_enabled" />

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:certconfig_cert_list_title" />

    <Text
        ohos:text_size="$float:medium_font"
        ohos:background_element="$graphic:alpha_blue_01"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:padding="5vp"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:certconfig_cert_list_description" />

    <Picker
        ohos:id="$+id:cboCert"
        ohos:background_element="$media:spinner_dark"  />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:cmd_add"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:add" />

        <Button
            ohos:id="$+id:cmd_remove"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:end_margin="4vp"
            ohos:text="$string:remove" />

        <Button
            ohos:id="$+id:cmd_edit"
            ohos:background_element="$graphic:btn_state_action"
            ohos:focusable="focus_adaptable"
            ohos:text="$string:edit" />
    </DirectionalLayout>
</DirectionalLayout>