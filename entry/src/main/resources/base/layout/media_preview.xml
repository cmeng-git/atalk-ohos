<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:ohos="http://schemas.huawei.com/res/ohos">
    <DependentLayout
        ohos:width="match_content"
        ohos:height="match_content">

        <Image
            ohos:id="$+id:media_preview_item"
            ohos:width="$float:media_preview_size"
            ohos:height="$float:media_preview_size"
            ohos:centerInParent="true"
            ohos:margin="5vp"
            ohos:background_element="$color:background_light"
            ohos:scaleType="fitCenter"
            ohos:image_src="$media:ic_logo" />

        <Button
            ohos:id="$+id:delete_button"
            ohos:width="18vp"
            ohos:height="18vp"
            ohos:scaleType="center"
            ohos:align_parent_top="true"
            ohos:align_parent_end="true"
            ohos:image_src="$media:ic_cancel" />
    </DependentLayout>
</layout>
