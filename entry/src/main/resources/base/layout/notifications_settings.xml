<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:fillViewport="true">

    <org.atalk.ohos.gui.widgets.ScrollingTable xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:id="$+id:content"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:orientation="vertical">

        <TableLayout
            ohos:id="$+id:table_header"
            ohos:width="match_parent"
            ohos:height="50vp"
            ohos:showDividers="beginning|middle|end"
            ohos:shrinkColumns="0,1,2,3"
            ohos:stretchColumns="4">

            <TableRow
                ohos:id="$+id:header_row"
                ohos:width="match_content"
                ohos:height="match_content">

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:horizontal_center="true"
                    ohos:min_width="100vp"
                    ohos:padding="5vp"
                    ohos:text="Enable" />

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:horizontal_center="true"
                    ohos:min_width="100vp"
                    ohos:padding="5vp"
                    ohos:text="Popup" />

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:horizontal_center="true"
                    ohos:padding="5vp"
                    ohos:text="Sound Notification" />

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:horizontal_center="true"
                    ohos:padding="5vp"
                    ohos:text="Sound Playback" />

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:horizontal_center="true"
                    ohos:padding="5vp"
                    ohos:text="Vibrate" />

                <Text
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text_alignment="center"
                    ohos:padding="5vp"
                    ohos:text="Description" />
            </TableRow>
        </TableLayout>

        <ScrollView
            ohos:width="match_content"
            ohos:height="match_parent"
            ohos:fillViewport="true">

            <TableLayout
                ohos:id="$+id:table_body"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:showDividers="beginning|middle|end"/>
        </ScrollView>
    </org.atalk.ohos.gui.widgets.ScrollingTable>
</HorizontalScrollView>