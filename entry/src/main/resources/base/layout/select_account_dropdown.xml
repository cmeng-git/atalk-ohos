<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:tools="http://schemas.huawei.com/tools">

    <Image
        ohos:id="$+id:accountProtoIcon"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:scale_mode="center"
        ohos:image_src="$media:jabber_logo" />

    <Checkbox
        ohos:id="$+id:protocolProvider"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="vertical_center"
        ohos:end_of="$id:accountProtoIcon"
        ohos:start_padding="5vp"
        ohos:text="AccountName"
        tools:ignore="RtlHardcoded" />
</DirectionalLayout>