<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content">

    <DependentLayout
        ohos:id="$+id:avatarView"
        ohos:width="$float:chat_avatar"
        ohos:height="$float:chat_avatar"
        ohos:align_parent_start="true"
        ohos:start_margin="5vp">

        <Image
            ohos:id="$+id:incomingAvatarIcon"
            ohos:width="$float:chat_avatar"
            ohos:height="match_parent"
            ohos:scale_mode="center"
            ohos:end_margin="1vp"
            ohos:image_src="$media:avatar" />

        <Image
            ohos:id="$+id:incomingStatusIcon"
            ohos:width="14vp"
            ohos:height="14vp"
            ohos:align_parent_bottom="true"
            ohos:align_parent_end="true"
            ohos:image_src="$media:contact_offline" />
    </DependentLayout>

    <DirectionalLayout
        ohos:id="$+id:msg_body_layout"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:end_margin="30vp"
        ohos:bottom_margin="4vp"
        ohos:end_of="$id:avatarView"
        ohos:layout_alignment="start"
        ohos:orientation="vertical"
        ohos:padding="7vp" >

        <Text
            ohos:id="$+id:incomingJidView"
            ohos:text_size="$float:small_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:start_margin="$float:chat_text_margin"
            ohos:multiple_lines="true"
            ohos:text_color="$color:blue" />

        <Text
            ohos:id="$+id:incomingMessageView"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:start_margin="$float:chat_text_margin"
            ohos:text_color="$color:black" />

        <Button
            ohos:id="$+id:showMapButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:element_start="$media:ic_map"
            ohos:hint="LatLng"
            ohos:text="$string:geo_street_views_map"
            ohos:visibility="hide" />

        <DirectionalLayout
            ohos:id="$+id:msg_info_layout"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:orientation="horizontal">

            <Image
                ohos:id="$+id:encStateView"
                ohos:width="18vp"
                ohos:height="18vp"
                ohos:image_src="$media:encryption_omemo" />

            <Text
                ohos:id="$+id:incomingTimeView"
                ohos:text_size="$float:small_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:start_margin="$float:chat_text_margin"
                ohos:text_color="$color:grey" />
        </DirectionalLayout>
    </DirectionalLayout>

    <Image
        ohos:id="$+id:messageArrowView"
        ohos:width="match_content"
        ohos:height="$float:chat_arrow_height"
        ohos:align_start="$id:msg_body_layout"
        ohos:start_margin="-10vp"
        ohos:top_margin="$float:chat_arrow_top"
        ohos:image_src="$media:message_arrow_in_dark" />

</DependentLayout>