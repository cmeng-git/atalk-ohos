<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <Text
        ohos:id="$+id:textMsgView"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="$string:invitation_received"
        ohos:text_size="$float:medium_font"/>

    <Text
        ohos:id="$+id:textInvitationTitle"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="10vp"
        ohos:text="$string:invitation_message"
        ohos:text_size="$float:medium_font"
        ohos:text_weight="$float:text_bold" />

    <TextField
        ohos:id="$+id:textInvitation"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:text="$string:invite_group_chat"
        ohos:enabled="false" />

    <Text
        ohos:id="$+id:textReason"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="10vp"
        ohos:text="$string:invite_reject_reason"
        ohos:text_size="$float:medium_font"
        ohos:text_weight="$float:text_bold" />

    <TextField
        ohos:id="$+id:rejectReasonTextArea"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:hint="$string:invite_reject_busy" />

</DirectionalLayout>