<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:padding="$float:screen_padding">

    <ScrollView
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:above="$id:button_bar"
        ohos:align_parent_top="true">

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical">

            <DirectionalLayout
                ohos:id="$+id:key_error_message_card"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:bottom_margin="$float:activity_vertical_margin"
                ohos:left_margin="$float:activity_horizontal_margin"
                ohos:end_margin="$float:activity_horizontal_margin"
                ohos:top_margin="$float:activity_vertical_margin"
                ohos:orientation="vertical"
                ohos:padding="$float:infocard_padding"
                ohos:visibility="hide">

                <Text
                    ohos:id="$+id:key_error_message_title"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text="$string:error"
                    ohos:text_color="$color:color_primary"
                    ohos:text_size="$float:medium_font"
                    ohos:text_weight="500" />

                <Text
                    ohos:id="$+id:key_error_message"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:padding="8vp"
                    ohos:text_color="$color:color_primary"
                    ohos:text_size="$float:medium_font" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:own_keys_card"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:bottom_margin="$float:activity_vertical_margin"
                ohos:left_margin="$float:activity_horizontal_margin"
                ohos:end_margin="$float:activity_horizontal_margin"
                ohos:top_margin="$float:activity_vertical_margin"
                ohos:orientation="vertical"
                ohos:padding="$float:infocard_padding"
                ohos:visibility="hide">

                <Text
                    ohos:id="$+id:own_keys_title"
                    ohos:width="match_content"
                    ohos:height="match_content"
                    ohos:text_size="$float:medium_font"
                    ohos:text_weight="500" />

                <DirectionalLayout
                    ohos:id="$+id:own_keys_details"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:orientation="vertical">
                </DirectionalLayout>
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:foreign_keys"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:orientation="vertical"
                ohos:visibility="hide">
            </DirectionalLayout>
        </DirectionalLayout>
    </ScrollView>

    <DirectionalLayout
        ohos:id="$+id:button_bar"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:align_parent_bottom="true"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:cancel_button"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:save_button"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:done" />
    </DirectionalLayout>
</DependentLayout>
