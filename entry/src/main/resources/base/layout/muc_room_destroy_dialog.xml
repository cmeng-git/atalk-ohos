<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical" >

    <Text
        ohos:id="$+id:textAlert"
        ohos:text_size="$float:medium_font"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="$string:chatroom_destroy_prompt"
        ohos:bottom_padding="20vp" />

    <Text
        ohos:id="$+id:textHint"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:text="$string:chatroom_destroy_note"
        ohos:text_size="$float:medium_font"/>

        <Text
            ohos:id="$+id:reasonView"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_padding="10vp"
            ohos:text="$string:reason" />

        <TextField
            ohos:id="$+id:ReasonDestroy"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent"
            ohos:text="$string:chatroom_destroy_reason" />

        <Text
            ohos:id="$+id:venueView"
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:top_padding="10vp"
            ohos:text="$string:chatroom_alternate_venue" />

        <TextField
            ohos:id="$+id:VenueAlternate"
            ohos:background_element="$graphic:bg_text_field"
            ohos:hint="$string:chatroom_hint"
            ohos:width="match_parent" />

</DirectionalLayout>