<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <Text
        ohos:id="$+id:requestInfo"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:text="$string:authorization_request_info" />

    <Checkbox
        ohos:id="$+id:addToContacts"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:marked="true"
        ohos:text="$string:add_contact_to_list" />

    <Text
        ohos:id="$+id:selectGroupTxt"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:between_padding"
        ohos:text="$string:assign_group" />

    <Picker
        ohos:id="$+id:selectGroupSpinner"
        ohos:background_element="$media:spinner_dark"
        ohos:bottom_margin="$float:between_padding" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="15vp"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:ignore"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:ignore" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:deny"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:deny" />

        <Component
            ohos:id="$+id:centerShim2"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:authorize"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:authorize" />
    </DirectionalLayout>
</DirectionalLayout>