<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:jid_Account"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:account" />

        <Picker
            ohos:id="$+id:jid_Accounts_Spinner"
            ohos:background_element="$media:spinner_dark"
            ohos:width="0vp"
            ohos:weight="1" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:NickName"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:nickname" />

        <TextField
            ohos:id="$+id:NickName_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:password"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:password_" />

        <DependentLayout
            ohos:id="$+id:pwdTypingArea"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:alignment="center"
            ohos:orientation="horizontal">

            <TextField
                ohos:id="$+id:passwordField"
                ohos:background_element="$graphic:bg_text_field"
                ohos:width="match_parent"
                ohos:hint="$string:password"
                ohos:text_input_type="pattern_password" />

            <Checkbox
                ohos:id="$+id:show_password"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:align_end="$id:passwordField"
                ohos:top_margin="10vp"
                ohos:end_margin="5vp"
                ohos:check_element="$graphic:checkbox_password_view" />
        </DependentLayout>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:none"
            ohos:width="100vp"
            ohos:height="match_content"/>

        <Checkbox
            ohos:id="$+id:store_password"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text="$string:save_password" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Text
            ohos:id="$+id:chatRoom_Subject"
            ohos:text_size="$float:medium_font"
            ohos:width="100vp"
            ohos:height="match_content"
            ohos:text_alignment="vertical_center"
            ohos:text="$string:subject" />

        <Button
            ohos:id="$+id:subject_clear"
            ohos:layout_width="30dp"
            ohos:layout_height="30dp"
            ohos:layout_marginEnd="8dp"
            ohos:layout_gravity="center_vertical"
            ohos:background_element="$graphics:correction_cancel" />

        <TextField
            ohos:id="$+id:chatRoom_Subject_Edit"
            ohos:background_element="$graphic:bg_text_field"
            ohos:hint="$string:group_chat"
            ohos:width="match_parent" />
    </DirectionalLayout>

    <Text
        ohos:id="$+id:chatRoom_Name"
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text="$string:chatroom" />

    <org.atalk.ohos.gui.util.ComboBox
        ohos:id="$+id:chatRoom_Combo"
        ohos:background_element="$media:spinner_dark"  />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="$float:between_padding"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:button_Cancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:button_Join"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:enabled="false"
            ohos:text="$string:join" />
    </DirectionalLayout>
</DirectionalLayout>