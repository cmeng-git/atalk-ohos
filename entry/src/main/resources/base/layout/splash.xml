<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:splash_screen"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$color:color_primary"
    ohos:alignment="center"
    ohos:orientation="vertical"
    ohos:visibility="visible" >

    <Image
        ohos:id="$+id:loadingImage"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:image_src="$media:ic_logo"
        ohos:padding="5vp"/>

    <Text
        ohos:id="$+id:textViewPowerBy"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:background_element="$graphic:alpha_white_border_01"
        ohos:top_margin="10vp"
        ohos:top_padding="5vp"
        ohos:bottom_padding="5vp"
        ohos:start_padding="10vp"
        ohos:end_padding="10vp"
        ohos:text="$string:powered_by"
        ohos:text_color="#ffff" />

    <Text
        ohos:id="$+id:stateInfo"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:top_margin="$float:between_padding"
        ohos:padding="$float:between_padding"
        ohos:text_size="$float:large_font"
        ohos:text_color="$color:textColorWhite"
        ohos:text="$string:please_wait" />

    <RoundProgressBar
        ohos:id="$+id:actionbar_progress"
        ohos:top_margin="$float:between_padding"
        ohos:width="48vp"
        ohos:height="48vp"
        ohos:layout_alignment="center"
        ohos:visibility="visible" />
</DirectionalLayout>
