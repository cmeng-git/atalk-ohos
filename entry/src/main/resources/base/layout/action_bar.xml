<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:tools="http://schemas.huawei.com/tools"
    ohos:width="match_content"
    ohos:height="match_content"
    ohos:orientation="horizontal">

    <Image
        ohos:id="$+id:logo"
        ohos:scale_mode="center"
        ohos:width="48vp"
        ohos:height="48vp"
        tools:ignore="ContentDescription" />

    <DependentLayout
        ohos:id="$+id:actionBarView"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:clickable="true"
        ohos:focusable="focus_adaptable"
        ohos:orientation="vertical"
        ohos:padding="3vp">

        <Text
            ohos:id="$+id:actionBarTitle"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_parent_start="true"
            ohos:align_parent_top="true"
            ohos:text_alignment="horizontal_center"
            ohos:text_weight="50"
            ohos:truncation_mode="ellipsis_at_end" />

        <DependentLayout
            ohos:id="$+id:subTitle"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_parent_start="true"
            ohos:align_parent_bottom="true"
            ohos:orientation="horizontal">

            <Image
                ohos:id="$+id:globalStatusIcon"
                ohos:width="18vp"
                ohos:height="18vp"
                ohos:scale_mode="center"
                ohos:component_description="$string:status" />

            <Text
                ohos:id="$+id:actionBarStatus"
                ohos:text_size="$float:small_font"
                ohos:width="match_content"
                ohos:height="match_content"
                ohos:text_alignment="vertical_center"
                ohos:start_margin="22vp"
                ohos:focusable="focus_adaptable"
                ohos:text_color="$color:textColorWhite" />
        </DependentLayout>
    </DependentLayout>
</DirectionalLayout>