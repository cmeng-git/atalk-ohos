<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:callInfoView"
    ohos:height="$float:contact_list_row_height"
    ohos:width="match_parent"
    ohos:background_element="$graphic:list_selector_state"
    ohos:orientation="horizontal"
    ohos:padding="5vp">

    <Image
        ohos:id="$+id:avatar"
        ohos:height="50vp"
        ohos:width="50vp"
        ohos:image_src="$media:avatar"
        ohos:scale_mode="center"/>

    <DirectionalLayout
        ohos:height="match_parent"
        ohos:width="0vp"
        ohos:bottom_padding="4vp"
        ohos:layout_alignment="bottom"
        ohos:orientation="vertical"
        ohos:start_padding="10vp"
        ohos:weight="1">

        <Text
            ohos:id="$+id:contactId"
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:max_text_lines="1"
            ohos:text="Displayname@server.com"
            ohos:text_color="$color:textColorBlack"
            ohos:text_size="$float:medium_font"
            ohos:truncation_mode="ellipsis_at_end"/>

        <DirectionalLayout
            ohos:height="match_content"
            ohos:width="match_parent"
            ohos:orientation="horizontal">

            <Image
                ohos:id="$+id:callType"
                ohos:height="20vp"
                ohos:width="20vp"
                ohos:image_src="$media:call_outgoing"/>

            <Text
                ohos:id="$+id:callInfo"
                ohos:height="match_content"
                ohos:width="match_parent"
                ohos:start_margin="$float:chat_text_margin"
                ohos:text="17/04/2020, 15.18, (1 min 5 sec)"
                ohos:text_color="$color:textColorBlack"
                ohos:text_size="$float:small_font"/>
        </DirectionalLayout>
    </DirectionalLayout>

    <Image
        ohos:id="$+id:buttonSeparatorView"
        ohos:height="40vp"
        ohos:width="1vp"
        ohos:image_src="$media:contact_list_v_separator_dark"
        ohos:scale_mode="center"/>

    <Image
        ohos:id="$+id:callButton"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:background_element="$graphic:list_selector_state"
        ohos:clickable="true"
        ohos:component_description="$string:call_audio"
        ohos:focusable="focus_adaptable"
        ohos:image_src="$media:contact_call"
        ohos:layout_alignment="vertical_center"
        ohos:min_height="$float:min_button_height"
        ohos:min_width="$float:min_button_width"
        ohos:padding="10vp"
        ohos:scale_mode="center"/>

    <Image
        ohos:id="$+id:buttonSeparatorView2"
        ohos:height="40vp"
        ohos:width="1vp"
        ohos:image_src="$media:contact_list_v_separator_dark"
        ohos:scale_mode="center"/>

    <Image
        ohos:id="$+id:callVideoButton"
        ohos:height="match_parent"
        ohos:width="match_content"
        ohos:background_element="$graphic:list_selector_state"
        ohos:clickable="true"
        ohos:component_description="$string:call_video"
        ohos:focusable="focus_adaptable"
        ohos:image_src="$media:contact_call_video"
        ohos:min_height="$float:min_button_height"
        ohos:min_width="$float:min_button_width"
        ohos:padding="10vp"
        ohos:scale_mode="center"/>

</DirectionalLayout>