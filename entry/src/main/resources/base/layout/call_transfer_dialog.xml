<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="$color:background_light"
    ohos:orientation="vertical"
    ohos:padding="$float:screen_padding_small">

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:horizontal_center="true"
        ohos:align_baseline="false"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:call_transfer_hint"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:call_transfer_hint"
            ohos:text_color="$color:black"
            ohos:text_size="$float:medium_font"/>
    </DirectionalLayout>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="3vp"
        ohos:bottom_margin="5vp"
        ohos:background_element="$color:contact_list_divider" />

    <ListContainer
        ohos:id="$+id:TransferListContainer"
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1"/>

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="3vp"
        ohos:top_margin="5vp"
        ohos:background_element="$color:contact_list_divider" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:horizontal_center="true"
        ohos:align_baseline="false"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:buttonCancel"
            ohos:background_element="$graphic:btn_state_action"
            ohos:text="$string:cancel" />

        <Button
            ohos:id="$+id:buttonTransfer"
            ohos:background_element="$graphic:btn_state_action"
            ohos:start_margin="4vp"
            ohos:text="$string:call_transfer" />
    </DirectionalLayout>

</DirectionalLayout>