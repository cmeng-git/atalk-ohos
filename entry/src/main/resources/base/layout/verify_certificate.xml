<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="10vp">

    <Text
        ohos:id="$+id:message"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:text_alignment="center"
        ohos:bottom_padding="20vp"
        ohos:text="{message ... }" />

    <DirectionalLayout
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:orientation="horizontal">

        <Button
            ohos:id="$+id:cancelButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:weight="1"
            ohos:text="$string:cancel" />

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:showCert"
            ohos:background_element="$graphic:btn_state_action"
            ohos:weight="1.8"
            ohos:text="$string:certificate_show" />

        <Component
            ohos:id="$+id:centerShim2"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:continueButton"
            ohos:background_element="$graphic:btn_state_action"
            ohos:weight="1"
            ohos:text="$string:proceed" />
    </DirectionalLayout>
</DirectionalLayout>