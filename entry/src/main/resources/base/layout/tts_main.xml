<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:margin="$float:screen_padding"
    ohos:orientation="vertical">

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:tts_voice" />

    <Text
        ohos:id="$+id:tts_locale"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:bottom_margin="$float:list_padding" />

    <Text
        ohos:text_size="$float:medium_font"
        ohos:width="match_content"
        ohos:height="match_content"
        ohos:bottom_margin="$float:label_padding"
        ohos:text="$string:tts_delay" />

    <TextField
        ohos:id="$+id:tts_delay"
        ohos:background_element="$graphic:bg_text_field"
        ohos:width="match_parent"
        ohos:text_input_type="pattern_number"
        ohos:bottom_margin="$float:list_padding" />

    <Checkbox
        ohos:id="$+id:tts_enable"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:bottom_margin="$float:list_padding"
        ohos:text="$string:tts_enable" />

    <Button
        ohos:id="$+id:tts_setting"
        ohos:background_element="$graphic:btn_state_action"
        ohos:width="match_parent"
        ohos:text="$string:tts_settings" />

    <DirectionalLayout
        ohos:id="$+id:loading"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:alignment="center"
        ohos:orientation="vertical"
        ohos:visibility="hide">

        <RoundProgressBar
            ohos:width="48vp"
            ohos:height="48vp"
            ohos:margin="$float:between_padding"
            ohos:layout_alignment="center" />

        <Text
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:text="$string:loading_wait" />
    </DirectionalLayout>

    <DirectionalLayout
        ohos:id="$+id:success"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:top_margin="$float:screen_padding"
        ohos:orientation="vertical" >

        <Text
            ohos:text_size="$float:medium_font"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:bottom_margin="$float:label_padding"
            ohos:text="$string:tts_synthesis" />

        <TextField
            ohos:id="$+id:tts_text"
            ohos:background_element="$graphic:bg_text_field"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:text_alignment="top"
            ohos:min_height="100vp" />

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:top_margin="$float:between_padding"
            ohos:orientation="horizontal">

            <Button
                ohos:id="$+id:tts_save"
                ohos:background_element="$graphic:btn_state_action"
                ohos:text="$string:save" />

            <Button
                ohos:id="$+id:tts_play"
                ohos:background_element="$graphic:btn_state_action"
                ohos:start_margin="4vp"
                ohos:text="$string:play" />

            <Button
                ohos:id="$+id:tts_ok"
                ohos:background_element="$graphic:btn_state_action"
                ohos:start_margin="4vp"
                ohos:text="$string:ok" />

        </DirectionalLayout>
    </DirectionalLayout>

</DirectionalLayout>