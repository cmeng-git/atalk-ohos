<?xml version="1.0" encoding="utf-8"?>

<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:id="$+id:menu"
    ohos:height="match_content"
    ohos:width="match_content"
    ohos:margin="$float:between_padding"
    ohos:orientation="vertical">

    <Text
        ohos:id="$+id:contact_tts_enable"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:tts_enable"
        />

    <Text
        ohos:id="$+id:close_chat"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:close_current_chat"
        />

    <Text
        ohos:id="$+id:close_all_chats"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:close_all_active_chats"
        />

    <Text
        ohos:id="$+id:erase_contact_chat_history"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:history_erase_for_contact"
        />

    <Text
        ohos:id="$+id:erase_all_contact_chat_history"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:history_erase_all"
        />

    <Text
        ohos:id="$+id:re_request_auth"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:request_authorization"
        />

    <Text
        ohos:id="$+id:rename_contact"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:rename_contact"
        />

    <Text
        ohos:id="$+id:contact_blocking"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:contact_block"
        />

    <Text
        ohos:id="$+id:remove_contact"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:remove_contact"
        />

    <Text
        ohos:id="$+id:move_contact"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:move_contact_to_group"
        />

    <Text
        ohos:id="$+id:send_contact_file"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:file_attachment"
        ohos:visibility="hide"
        />

    <Text
        ohos:id="$+id:contact_info"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:contact_info"
        />

    <Text
        ohos:id="$+id:contact_ctx_menu_exit"
        ohos:text_size="$float:medium_font"
        ohos:title="$string:cancel"
        />
</DirectionalLayout>