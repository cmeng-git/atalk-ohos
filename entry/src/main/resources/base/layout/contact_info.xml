<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    xmlns:tools="http://schemas.huawei.com/tools"
    ohos:id="$+id:contactInfo_layout"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:orientation="vertical"
    ohos:padding="5vp">

    <DependentLayout
        ohos:id="$+id:avatar"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:horizontal_center="true"
        ohos:align_baseline="false"
        ohos:orientation="horizontal"
        ohos:bottom_padding="5vp">

        <Image
            ohos:id="$+id:contactAvatar"
            ohos:width="64vp"
            ohos:height="64vp"
            ohos:align_parent_start="true"
            ohos:start_margin="10vp"
            ohos:top_margin="5vp"
            ohos:background_element="$color:background_light"
            ohos:clickable="true"
            ohos:focusable="focus_adaptable"
            ohos:image_src="$media:person_photo" />

        <Image
            ohos:id="$+id:presenceStatusIcon"
            ohos:width="32vp"
            ohos:height="32vp"
            ohos:align_top="$id:contactAvatar"
            ohos:start_margin="20vp"
            ohos:end_of="$id:contactAvatar"
            ohos:image_src="$media:jabber_status_ffc" />

        <Text
            ohos:id="$+id:presenceStatusName"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_bottom="$id:presenceStatusIcon"
            ohos:start_margin="10vp"
            ohos:top_margin="5vp"
            ohos:end_of="$id:presenceStatusIcon"
            ohos:text="Offline" />

        <Text
            ohos:id="$+id:statusMessage"
            ohos:width="match_content"
            ohos:height="match_content"
            ohos:align_bottom="$id:contactAvatar"
            ohos:start_margin="20vp"
            ohos:top_margin="40vp"
            ohos:end_of="$id:contactAvatar"
            ohos:hint="$string:contactinfo_status_message"
            tools:ignore="UnknownIdInLayout" />
    </DependentLayout>

    <ScrollView
        ohos:width="match_parent"
        ohos:height="0vp"
        ohos:weight="1">

        <DirectionalLayout
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:orientation="vertical"
            ohos:padding="10vp">

            <DirectionalLayout
                ohos:id="$+id:ci_DisplayName_Container"
                ohos:width="match_parent"
                ohos:height="match_content"
