                ohos:align_baseline="false"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:ci_DisplayName"
                    ohos:width="140vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:accountinfo_display_name" />

                <Text
                    ohos:id="$+id:ci_DisplayNameField"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:contactinfo_not_specified" />
