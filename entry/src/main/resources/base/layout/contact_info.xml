                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:contactinfo_not_specified" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:ci_Country_Container"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:horizontal_center="true"
                ohos:align_baseline="false"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:ci_Country"
                    ohos:width="140vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:accountinfo_country" />

