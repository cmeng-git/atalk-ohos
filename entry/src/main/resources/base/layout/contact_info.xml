            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:ci_WorkEmail_Container"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:horizontal_center="true"
                ohos:align_baseline="false"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:ci_WorkEmail"
                    ohos:width="140vp"
                    ohos:height="match_content"
