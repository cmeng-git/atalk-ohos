                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:horizontal_center="true"
                ohos:align_baseline="false"
                ohos:orientation="horizontal">

                <Text
                    ohos:id="$+id:ci_URL"
                    ohos:width="140vp"
                    ohos:height="match_content"
                    ohos:text_alignment="vertical_center"
                    ohos:text="$string:contact_url" />

                <Text
                    ohos:id="$+id:ci_URLField"
                    ohos:width="match_parent"
                    ohos:height="match_content"
                    ohos:text="$string:contactinfo_not_specified" />
            </DirectionalLayout>

            <DirectionalLayout
                ohos:id="$+id:ci_Gender_Container"
                ohos:width="match_parent"
                ohos:height="match_content"
                ohos:horizontal_center="true"
                ohos:align_baseline="false"
