    <DependentLayout
        ohos:id="$+id:button_Container"
        ohos:width="match_parent"
        ohos:height="match_content"
        ohos:margin="10vp">

        <Component
            ohos:id="$+id:centerShim"
            ohos:width="0vp"
            ohos:height="0vp"
            ohos:layout_alignment="horizontal_center"
            ohos:margin="2vp"
            ohos:visibility="invisible" />

        <Button
            ohos:id="$+id:button_OK"
            ohos:background_element="$graphic:btn_state_action"
            ohos:width="match_parent"
            ohos:height="match_content"
            ohos:align_parent_end="true"
            ohos:end_of="$id:centerShim"
            ohos:text="$string:ok" />
